    </div>
</div>

<div class="container">
    <nav>
        <ul class="pagination">
            <% if (hasPreviousPage) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= previousPage %>">Previous</a>
                </li>
                <% } %>

                    <% for(let i=1; i <=pages; i++){ %>
                        <li class="page-item <% if(currentPage == i) { %>active<% } %>">
                            <a class="page-link" href="?page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>

                            <% if (hasNextPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= nextPage %>">Next</a>
                                </li>
                                <% } %>
        </ul>
    </nav>
</div>